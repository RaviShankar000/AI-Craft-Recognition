# Server Configuration
PORT=3000
NODE_ENV=development

# Socket.IO Debug Logging
# Enable detailed debug logging for socket events (auto-enabled in development)
# DEBUG_SOCKET=true

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/ai-craft-recognition

# AI Service Configuration
AI_SERVICE_URL=http://localhost:5001
AI_TIMEOUT=15000
# AI service timeout in milliseconds (default: 15000ms = 15 seconds)
ENABLE_AI_FALLBACK=true
# Enable fallback response when AI service is unavailable (default: true)

# Speech-to-Text Configuration
STT_PROVIDER=whisper
OPENAI_API_KEY=your_openai_api_key_here
# GOOGLE_STT_API_KEY=your_google_api_key_here

# API Keys (Add your keys here)
# OPENAI_API_KEY=your_openai_api_key_here
# GEMINI_API_KEY=your_gemini_api_key_here

# CORS Configuration
# Single origin (backward compatibility)
CORS_ORIGIN=http://localhost:5173
# Multiple origins (comma-separated for production)
# CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# JWT Configuration (if needed)
# JWT_SECRET=your_jwt_secret_here
# JWT_EXPIRE=30d

# Admin Bootstrap Configuration
# Used by scripts/seedAdmin.js to create default admin user
ADMIN_NAME=System Administrator
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123
